<div class="container mt-3 d-flex justify-content-center">
  <div class="row">
    <form action="/restaurants" method="POST">
      <div class="mt-3">
        <label for="name">餐廳名稱</label>
        <input type="text" id="name" name="name">
      </div>
      <div class="mt-3">
        <label for="name_en">英文名稱</label>
        <input type="text" id="name_en" name="name_en">
      </div>
      <div class="mt-3">
        <label for="category">類別</label>
        <input type="text" id="category" name="category">
      </div>
      <div class="mt-3">
        <label for="image">圖片</label>
        <input type="text" id="image" name="image">
      </div>
      <div class="mt-3">
        <label for="location">地址</label>
        <input type="text" id="location" name="location">
      </div>
      <div class="mt-3">
        <label for="phone">電話</label>
        <input type="text" id="phone" name="phone">
      </div>
      <div class="mt-3">
        <label for="google_map">地圖</label>
        <input type="text" id="google_map" name="google_map">
      </div>
      <div class="mt-3">
        <label for="rating">評分</label>
        <input type="text" id="rating" name="rating">
      </div>
      <div class="mt-3">
        <label for="description">介紹</label>
        <input type="text" id="description" name="description">
      </div>
      <button type="submit" class="mt-3 mb-3 btn btn-outline-success">Create Restaurant</button>
    </form>
  </div>
</div>