{{#if errorMessage}}
<div class="alert alert-danger">
  {{errorMessage}}
</div>
{{/if}}
{{> message}}
<div class="container mt-3 d-flex justify-content-center">
  <div class="row">
    <form action="/restaurants/{{restaurant.id}}?_method=PUT" method="POST">
      <div class="mt-3">
        <label for="name">餐廳名稱</label>
        <input type="text" id="name" name="name" value="{{restaurant.name}}">
      </div>
      <div class="mt-3">
        <label for="name_en">英文名稱</label>
        <input type="text" id="name_en" name="name_en" value="{{restaurant.name_en}}">
      </div>
      <div class="mt-3">
        <label for="category">類別</label>
        <input type="text" id="category" name="category" value="{{restaurant.category}}">
      </div>
      <div class="mt-3">
        <label for="image">圖片</label>
        <input type="text" id="image" name="image" value="{{restaurant.image}}">
      </div>
      <div class="mt-3">
        <label for="location">地址</label>
        <input type="text" id="location" name="location" value="{{restaurant.location}}">
      </div>
      <div class="mt-3">
        <label for="phone">電話</label>
        <input type="text" id="phone" name="phone" value="{{restaurant.phone}}">
      </div>
      <div class="mt-3">
        <label for="google_map">地圖</label>
        <input type="text" id="google_map" name="google_map" value="{{restaurant.google_map}}">
      </div>
      <div class="mt-3">
        <label for="rating">評分</label>
        <input type="text" id="rating" name="rating" value="{{restaurant.rating}}">
      </div>
      <div class="mt-3">
        <label for="description">介紹</label>
        <input type="text" id="description" name="description" value="{{restaurant.description}}">
      </div>
      <button type="submit" class="mt-3 mb-3 btn btn-outline-success">Edit Restaurant</button>
    </form>
  </div>
</div>